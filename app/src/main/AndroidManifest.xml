<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.jorgecastillo.kotlinandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".io.runtime.NewsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">

        <activity android:name="com.github.jorgecastillo.kotlinandroid.io.runtime.ui.AndroidNewsListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.jorgecastillo.kotlinandroid.io.runtime.ui.NewsItemDetailActivity"
            android:theme="@style/NoActionBar" />
    </application>
</manifest>
