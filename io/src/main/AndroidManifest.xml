<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.jorgecastillo.kotlinandroid">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name="com.github.jorgecastillo.kotlinandroid.io.runtime.ui.SuperHeroListActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name="com.github.jorgecastillo.kotlinandroid.io.runtime.ui.SuperHeroDetailActivity"
        android:theme="@style/NoActionBar"/>
  </application>
</manifest>
